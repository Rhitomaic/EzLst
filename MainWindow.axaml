<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        Width="400" Height="450"
        x:Class="EzLst.MainWindow"
        Title="EzLst">

    <Grid RowDefinitions="Auto, *">
        <StackPanel Margin="20" Spacing="12">
            <StackPanel>
                <Label FontSize="28" FontWeight="DemiBold">EzLst</Label>
                <Label FontSize="12">by Rhitomaic</Label>
            </StackPanel>
            <Label>Select an LST file or directory to convert</Label>

            <ComboBox x:Name="ModeComboBox" SelectedIndex="0" HorizontalAlignment="Stretch">
                <ComboBoxItem Content="File"/>
                <ComboBoxItem Content="Directory"/>
            </ComboBox>

            <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="5">
                <TextBlock Text="Path:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" x:Name="PathTextBox"/>
                <Button Grid.Column="2" x:Name="BrowseButton" Content="Browse..."/>
            </Grid>

            <Grid ColumnSpacing="8" RowDefinitions="Auto, Auto, *">
                <CheckBox x:Name="CustomOutputCheckBox" Content="Use custom output path"/>
                <Label Grid.Row="1" IsVisible="{Binding IsChecked, ElementName=CustomOutputCheckBox}">Change the output path for the xlsx to be placed</Label>
                <TextBox Grid.Row="2" x:Name="OutputPathTextBox" IsVisible="{Binding IsChecked, ElementName=CustomOutputCheckBox}"/>
            </Grid>

            <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
        </StackPanel>
        <Border Grid.Row="1" Padding="20,0">
        <TextBlock x:Name="StatusLabel">Start converting!</TextBlock>
        </Border>
    </Grid>
</Window>